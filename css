/* CSS Umum untuk Website */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f4f4f4;
}

/* ... kode CSS lainnya ... */

/* Media Query untuk Mobile Devices */
@media (max-width: 768px) {
  .container {
    width: 95%; /* Lebar kontainer lebih lebar pada layar kecil */
    padding: 15px;
  }

  input[type="text"], button {
    width: 100%; /* Input dan tombol akan mengambil lebar penuh */
  }

  table {
    font-size: 14px; /* Ukuran font yang lebih kecil untuk mobile */
  }

  img {
    width: 80px; /* Mengurangi ukuran gambar agar tidak terlalu besar pada perangkat kecil */
  }

  .search-box {
    display: flex;
    flex-direction: column; /* Membuat input dan tombol menjadi kolom */
    align-items: center;
  }

  button {
    width: 100%; /* Tombol pencarian mengambil lebar penuh */
    margin-top: 10px;
  }

  table {
    overflow-x: auto; /* Menambahkan scroll horizontal jika tabel terlalu lebar */
    display: block;
  }
}

@media (max-width: 480px) {
  h1 {
    font-size: 20px; /* Mengurangi ukuran font judul untuk perangkat kecil */
  }

  table {
    font-size: 10px; /* Ukuran font lebih kecil */
    white-space: nowrap; /* Agar teks dalam tabel tidak pecah di layar kecil */
  }

  th, td {
    padding: 5px; /* Padding lebih kecil */
  }

  img {
    width: 60px; /* Ukuran gambar lebih kecil pada layar sangat kecil */
  }
}
